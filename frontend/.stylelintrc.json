{
  "plugins": [
    "stylelint-scss"
  ],
  "extends": [
    "stylelint-config-sass-guidelines"
  ],
  "rules": {
    "max-nesting-depth": 2,
    "color-hex-case": "upper",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extend",
          "at-root",
          "debug",
          "warn",
          "error",
          "if",
          "else",
          "for",
          "each",
          "while",
          "mixin",
          "include",
          "content",
          "return",
          "function"
        ]
      }
    ]
  }
}
